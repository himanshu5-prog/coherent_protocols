{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
               "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/bus/bus.cpp", 
                "${workspaceFolder}/mainFunc.cpp", 
                "${workspaceFolder}/src/printFunc.cpp",
                "${workspaceFolder}/src/core/core.cpp", 
                "${workspaceFolder}/src/cpu/cpu.cpp",
                "${workspaceFolder}/src/processor/processor.cpp",
                "${workspaceFolder}/src/memory/memory.cpp",
                "${workspaceFolder}/src/perf_param/perf_param.cpp",
                "-o",
                "${workspaceFolder}/a.out"
                //"input/inputFile1.txt -v 0"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}